@model Editresp

@{
    ViewData["Title"] = "Edit";
}
<link href="~/css/editor.css" rel="stylesheet">

<div class="row">
    <div class="col-md-12 row form-container">
        <h4>編輯商品</h4>
        <form asp-action="EditSave" enctype="multipart/form-data" class="form-row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Product.Id" />
            @*類別*@
            <div class="form-group row mb-3">
                <label asp-for="Product.CategoryId" class="col-md-1 control-label required">產品類型</label>
                <div class="col-md-11">
                    <select class="form-control" asp-for="Product.CategoryId" asp-items="Model.CategoryList"></select>
                    <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
                </div>
            </div>
            @*名稱*@
            <div class="form-group row mb-3">
                <label asp-for="Product.Name" class="col-md-1 control-label required">產品名稱</label>
                <div class="col-md-11">
                    <input asp-for="Product.Name" class="form-control" />
                    <span asp-validation-for="Product.Name" class="text-danger"></span>
                </div>
            </div>
            @*簡介*@
            <div class="form-group row mb-3">
                <label asp-for="Product.Description" class="col-md-1 col-form-label">產品簡介</label>
                <div class="col-md-11">
                    <textarea asp-for="Product.Description" class="form-control"></textarea>
                </div>
            </div>
            @*圖片*@
            <div class="form-group row mb-3">
                <label asp-for="Product.Image" for="inputImg" class="col-md-1 control-label">產品圖片</label>
                <div class="col-md-11 custom-file">
                    <label class="custom-file-label w-100" id="customFileLabel" for="inputImg">選擇圖片</label>
                    <input type="file" class="custom-file-input" id="inputImg" name="myImg">
                    <span asp-validation-for="Product.Image" class="text-danger"></span>
                </div>
            </div>
            <div class="col-4 mb-3">
                <img id="preview" class="img-fluid mx-auto d-block" style="height:200px;" src="@Html.DisplayFor(model => model.Imgsrc)" />
            </div>
            @*價格*@
            <div class="form-group row mb-3">
                <label asp-for="Product.Price" class="col-md-1 col-form-label required">產品價格</label>
                <div class="col-md-11">
                    <input asp-for="Product.Price" class="form-control" />
                    <span asp-validation-for="Product.Price" class="text-danger"></span>
                </div>
            </div>
            @*庫存*@
            <div class="form-group row mb-3">
                <label asp-for="Product.Stock" class="col-md-1 control-label required">產品庫存</label>
                <div class="col-md-11">
                    <input asp-for="Product.Stock" class="form-control" />
                    <span asp-validation-for="Product.Stock" class="text-danger"></span>
                </div>
            </div>
            @* 是否上架 *@
            <div class="form-check form-switch row mb-3 d-flex align-items-center">
                <div class="col-md-1">
                    <label class="form-check-label required" for="flexSwitchCheckChecked">是否上架</label>
                </div>
                <div class="col-md-11">
                    <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckChecked" name="Product.CanOrder" value="true" @(Model.Product.CanOrder ? "checked" : "")>
                    <span asp-validation-for="Product.CanOrder" class="text-danger"></span>
                </div>
            </div>
            @*內容*@
            <div class="form-group row mb-3">
                <label asp-for="Product.Content" class="col-md-1 col-form-label">產品內容</label>
                <div class="col-md-11">
                    <textarea asp-for="Product.Content" class="form-control"></textarea>
                </div>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Save" class="btn submit-btn" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $('#inputImg').on('change', function (e) {
            const file = this.files[0];
            const label = document.getElementById('customFileLabel');
            const fileName = inputImg.files[0] ? inputImg.files[0].name : '選擇圖片';
            label.textContent = fileName;
        })
    </script>
    
    <script src="~/lib/ckeditor5/build/ckeditor.js"></script>

}