@model Editresp

@{
    ViewData["Title"] = "Edit";
}
<link href="~/css/editor.css" rel="stylesheet">
<h1>Edit</h1>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="EditSave" enctype="multipart/form-data" class="form-row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Product.Id" />
            @*類別*@
            <div class="form-group col-4">
                <label asp-for="Product.CategoryId" class="control-label"></label>  
                <select class="form-control" asp-for="Product.CategoryId" asp-items="Model.CategoryList"></select>
            </div>
            @*名稱*@
            <div class="form-group col-4">
                <label asp-for="Product.Name" class="control-label"></label>
                <input asp-for="Product.Name" class="form-control" />
                <span asp-validation-for="Product.Name" class="text-danger"></span>
            </div>
            @*圖片*@
            <div class="form-group col-4">
                <label asp-for="Product.Image" class="control-label" ></label>  
                <input type="file" class="form-control-file"  name="myImg" id="inputImg" >
                <span asp-validation-for="Product.Image" class="text-danger"></span>
            </div>
            @*簡介*@
            <div class="form-group col-8" >
                <label asp-for="Product.Description" class="control-label"></label>
                <textarea asp-for="Product.Description" class="form-control" rows="6"></textarea>
            </div>
            <div class="col-4">
                <img id="preview" class="img-fluid mx-auto d-block" style="height:200px;" src="@Html.DisplayFor(model => model.Imgsrc)"/>
            </div>
            @*價格*@
            <div class="form-group col-6">
                <label asp-for="Product.Price" class="control-label"></label>
                <input asp-for="Product.Price" class="form-control" />
                <span asp-validation-for="Product.Price" class="text-danger"></span>
            </div>
            @*庫存*@
            <div class="form-group col-6">
                <label asp-for="Product.Stock" class="control-label"></label>  
                <input asp-for="Product.Stock" class="form-control" />
            </div>
            @* 是否上架 *@
            <div class="form-check form-switch col-12">
                <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckChecked" name="CanOrder" value="true" @(Model?.Product.CanOrder == true ? "checked" : "")>
                <label class="form-check-label" for="flexSwitchCheckChecked">是否上架</label>
                <span asp-validation-for="Product.CanOrder" class="text-danger"></span>
            </div>
            @*內容*@
            <div class="form-group col-12">
                <label asp-for="Product.Content" class="control-label"></label>
                <textarea asp-for="Product.Content" class="form-control" id="editor"></textarea>
            </div>
            
            
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
    $('#inputImg').on('change',function(e){
        const file = this.files[0];
        //用crateObjectURL產生圖片URL
        const objectURL=URL.createObjectURL(file);
        $('#preview').attr('src',objectURL);
    })
    </script>
    
    <script src="~/lib/ckeditor5/build/ckeditor.js"></script>

    <script>
        ClassicEditor
            .create( document.querySelector( '#editor' ) )
            .then( editor => {
                console.log( editor );
            } )
            .catch( error => {
                console.error( error );
            } );

    </script>

}